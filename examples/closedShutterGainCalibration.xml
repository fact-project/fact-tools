    <stream id="fact" class="fact.io.FitsStream" 
            url="file:${data}" />
            
        <process input="fact">
        <fact.utils.PreviousEventInfo startCellKey="StartCellData" outputKey="prevEvents" limitEvents="5"/>
        <stream.flow.Skip condition="%{data.EventNum} &lt; 0" />
<!--         <stream.flow.Skip condition="%{data.TriggerType} != 4" /> -->
        <fact.filter.DrsCalibration url="file:${dataDRS}" key="Data"  outputKey="DataCalibrated" color="#000000"/>  
        <fact.filter.PatchJumpRemoval dataKey="DataCalibrated" outputKey="DataCalibrated" color="#E6172F" outputJumpsKey="j" prevEventsKey="prevEvents" startCellKey="StartCellData" jumpLimit="2.0" />
        <fact.filter.RemoveSpikesMars key="DataCalibrated" outputkey="DataCalibrated" />
        <fact.filter.InterpolateBadPixel key="DataCalibrated"  outputKey="DataCalibrated" badChidIds="863,868,297,927,80,873,1093,1094,527,528,721,722" />
       
        <fact.filter.MovingAverage key="DataCalibrated" outputKey="DataSmoothed" />

