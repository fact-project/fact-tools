<container>


<property name="data" value="20130104_095.fits" />
<property name="dataDRS" value="20130104_076.drs.fits" />

<!-- <property name="path " value="/home/bruegge/FactTest" /> -->
 	<property name="path" value="/Users/kaibrugge/FactTest" />
 

	<stream id="fact" class="fact.io.FitsStream" 
 		    url="file:${path}/${data}"  />
		    
		<process input="fact">
			<Skip condition="%{data.EventNum} &lt; 77" />
			<fact.processors.DrsCalibration drsFile="${path}/${dataDRS}" color="#5C311F"/>	
<!-- 			<fact.processors.parfact.CalculatePhotonCharge /> -->
			<fact.processors.parfact.RemoveSpikesMars  />
			<fact.processors.CutSlices  start="22" end="220"/>
			<fact.processors.RemoveJumps color="#FF00FF" />
			<fact.processors.parfact.CoreNeighborClean/>
			<fact.processors.parfact.CalcSourcePosition file="${path}/20120229_144.DRIVE_CONTROL_TRACKING_POSITION.fits" />
			<fact.processors.parfact.HillasParameter key="DataCalibrated"/>
			<stream.io.CsvWriter url="file:/Users/kaibrugge/FactTest/ergebniss.csv"  keys="EventNum,EllipseShowerSize,EllipseArea"/>
			
			
			<stream.monitor.DataRate every="50"/>
<!-- 			<fact.image.monitors.StatusWindow every="50" /> -->
			<fact.image.ShowImage/>
		</process>
</container>
